<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground" >
    
    <TextView
        android:id="@+id/subjectTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:letterSpacing="0.05"
        app:layout_goneMarginEnd="@dimen/grid_2"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Package Shipped!"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:id="@+id/subjectTopicCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_0_5"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:letterSpacing="0.05"
        tools:text="Google Express - 12m"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/subjectTopic"/>

    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:id="@+id/subjectTopicDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_0_5"
        android:maxLines="2"
        android:letterSpacing="0.05"
        android:lineSpacingMultiplier="1.12"
        tools:text="Cucumber mask facial has shipped. It'll be on your front door by the end of the week!"
        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/subjectTopicCount"/>

    <View
        android:id="@+id/subjectView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#929497"
        android:layout_marginTop="@dimen/grid_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/subjectTopicDescription"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>